{
  "name": "kissan-ghar-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend server for Kissan Ghar Dashboard",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "migrate": "node scripts/run-migration.js",
    "clear-data": "node scripts/clear-all-data.js",
    "import-data": "node scripts/import-all-data.js",
    "verify-data": "node scripts/verify-data.js",
    "test-webhooks": "node scripts/test-webhooks.js",
    "reset-db": "npm run clear-data && npm run import-data && npm run verify-data"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.js"
    ]
  }
}
